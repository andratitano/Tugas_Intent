<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_color"
    tools:context=".FragmentBundle">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_bundle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bundle"
        android:textSize="32sp"
        android:layout_marginTop="64dp"
        android:textColor="#874D0D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/et_nama_bundle"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="#FFFFFF"
        android:hint="Nama"
        android:inputType="text"
        android:outlineSpotShadowColor="#000000"
        android:textColor="#000"
        android:textColorHint="#8E8E8E"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bundle" />

    <EditText
        android:id="@+id/et_umur_bundle"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        android:hint="Umur"
        android:inputType="number"
        android:outlineSpotShadowColor="#000000"
        android:textColor="#000"
        android:textColorHint="#8E8E8E"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_nama_bundle" />

    <Button
        android:id="@+id/btn_bundle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D69855"
        app:layout_constraintTop_toBottomOf="@id/et_umur_bundle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"
        android:text="@string/submit"
        android:textColor="#fff"/>

</androidx.constraintlayout.widget.ConstraintLayout>

