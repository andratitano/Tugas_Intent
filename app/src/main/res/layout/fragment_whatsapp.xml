<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_color"
    tools:context=".FragmentWhatsapp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_dial"
        android:layout_width="120dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Explicit Intent Whatsapp Send Message"
        android:textSize="24sp"
        android:layout_marginTop="64dp"
        android:textColor="#874D0D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/et_no_whatsapp"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        android:hint="Nomor Tujuan"
        android:inputType="number"
        android:outlineSpotShadowColor="#000000"
        android:textColor="#000000"
        android:textColorHint="#8E8E8E"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dial" />

    <EditText
        android:id="@+id/et_msg_whatsapp"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        android:hint="Pesan"
        android:inputType="text"
        android:outlineSpotShadowColor="#000000"
        android:textColor="#000"
        android:textColorHint="#8E8E8E"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_no_whatsapp" />


    <Button
        android:id="@+id/btn_whatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D69855"
        app:layout_constraintTop_toBottomOf="@id/et_msg_whatsapp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:text="Kirim Via Whatsapp"
        android:textColor="#fff"/>

</androidx.constraintlayout.widget.ConstraintLayout>



